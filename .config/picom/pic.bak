backend = "glx";
glx-no-stencil = true;
glx-copy-from-front = false;
no-dock-shadow = true;

# Opacity
active-opacity = 1;
inactive-opacity = 1;
frame-opacity = 1;
inactive-opacity-override = false;
blur-background = true;
blur-background-exclude = [
];

#blur-kern = "3x3box";
blur-method = "dual_kawase";
blur-strength = 3;
opacity-rule = [
  "100:class_g = 'st-256color' && focused",
  "90:class_g = 'st-256color' && !focused"
];

# Fading
fading = false;
fade-delta = 4;
no-fading-openclose = false;

corner-radius = 0;

shadow = true;
shadow-radius = 60;
shadow-opacity = 0.5;
shadow-offset-x = -60;
shadow-offset-y = -25;

#shadow-exclude = [
#    "class_g = 'bar'",
#    "class_g = 'lemonbar'",
#    "class_g = 'firefox'",
#];
shadow-ignore-shaped = false;
