##########
KEYS ---- SXHKD

# keybindings

# terminal
super + Return
	alacritty
super + shift + Return
  alacritty --class float,float -o window.dimensions.lines=25 window.dimensions.columns=80

# menu
super + x
  "$HOME"/.config/bspwm/bin/menu

# launcher
super + d
	rofi -show drun -theme "$HOME"/.config/rofi/theme.rasi

# power menu
super + BackSpace
    "$HOME"/.config/bspwm/bin/powermenu

# window menu
super + Tab
    rofi -show window -theme "$HOME"/.config/rofi/theme.rasi

# toggle compositor
super + shift + p
  "$HOME"/.config/bspwm/bin/toggle-comp

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# restart sxhkd
super + Escape
	pkill -USR1 -x sxhkd

# close (all) window(s)
super + {_,shift + }q
	bspc node -{c,k}

alt + {_,shift + }F4
   bspc node -{c,k}

# maximize window
super + m
	bspc desktop -l next

# hide window
super + n
  $HOME/.config/bspwm/bin/minimize

# idk
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# change layout
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# rotate
super + r
  bspc node @/ --rotate {90,-90}

# equalize
super + equal
  bspc node @/ --equalize

# idk
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# move window
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# previous/next workspace
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# change workspace/move window to workspace
super + {_,shift + }{1-9}
	bspc {desktop -f,node -d} '^{1-9}'

# preselect
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}
super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel preselect
super + ctrl + space
	bspc node -p cancel
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# resize window
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
super + alt + {Left,Down,Up,Right}
  bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# screenshot
Print
  "$HOME"/.config/bspwm/bin/screenshot
super + Delete
  "$HOME"/.config/bspwm/bin/screenshot

# colorscheme changer
super + shift + c
  "$HOME"/.config/bspwm/bin/colorchanger

# volume
super + ctrl + {minus,equal,0}
    "$HOME"/.config/bspwm/bin/volume {--down,--up,--toggle}
{XF86AudioLowerVolume,XF86AudioRaiseVolume,XF86AudioMute}
    "$HOME"/.config/bspwm/bin/volume {--down,--up,--toggle}

# brightness
super + ctrl + bracket{left,right}
    "$HOME"/.config/bspwm/bin/brightness {--down,--up}
{XF86MonBrightnessDown,XF86MonBrightnessUp}
    "$HOME"/.config/bspwm/bin/brightness {--down,--up}

# toggle polybar
super + shift + b
    "$HOME"/.config/bspwm/bin/toggle-bar

###### 

AUTOSTART
#!/usr/bin/env bash

autostart() {
	if ! pgrep -fx "$1" ; then
		"$@"&
	fi
}

# autostart
# usage: autostart [command]

# xsettingsd
autostart xsettingsd

# wallpaper
autostart "$HOME"/.fehbg

# polybar
autostart "$HOME"/.config/polybar/launch

# notification
autostart dunst

# compositor
autostart picom

# autolock
autostart xss-lock -- "$HOME"/.config/bspwm/bin/lockscreen

# mpd
autostart mpd

# polkit-gnome
autostart /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

######
CFG

#!/usr/bin/env bash

# bspwm config
# usage: bspc config [argument]

source "$HOME"/.config/bspwm/user/options

# workspaces
for monitor in $(xrandr -q | grep -w 'connected' | cut -d' ' -f1); do
		bspc monitor "$monitor" -d '1' '2' '3' '4' '5' '6' '7' '8' '9'
done

# config
bspc config remove_unplugged_monitors true
bspc config remove_disabled_monitors true
bspc config window_gap $bsp_gaps
bspc config border_width $bsp_border
bspc config focus_follows_pointer $bsp_focus_pointer
bspc config split_ratio $bsp_split_ratio
bspc config single_monocle true
bspc config borderless_monocle $bsp_borderless_monocle
bspc config gapless_monocle $bsp_gapless_monocle
bspc config top_padding $bsp_top_padding
bspc config bottom_padding $bsp_bottom_padding
bspc config left_padding $bsp_left_padding
bspc config right_padding $bsp_right_padding

#######
DECORATION

#!/usr/bin/env bash

# decoration

bspc config normal_border_color "#242424"
bspc config focused_border_color "#ff4343"

